@model Egzaminy.Models.ApplicationUser

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ApplicationUser</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Imie)
    @Html.HiddenFor(model => model.Nazwisko)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.EmailConfirmed)
    @Html.HiddenFor(model => model.PasswordHash)
    @Html.HiddenFor(model => model.TwoFactorEnabled)
    @Html.HiddenFor(model => model.LockoutEnabled)
    @Html.HiddenFor(model => model.LockoutEndDateUtc)
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.PhoneNumber)
    @Html.HiddenFor(model => model.PhoneNumberConfirmed)
    @Html.HiddenFor(model => model.SecurityStamp)
    @Html.HiddenFor(model => model.AccessFailedCount)

    <div class="form-group">
        @Html.LabelFor(model => model.Imie, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Imie)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nazwisko, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Nazwisko)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <table>
                <tr>
                    @{
                        int cnt = 0;
                        List<Egzaminy.ViewModels.DajPrzedmioty> przedmioty = ViewBag.Przedmioty;

                        foreach (var przedmiot in przedmioty)
                        {
                            if (cnt++ % 3 == 0)
                            {
                                @:</tr><tr>
                            }
                                @:<td>
                                    <input type="checkbox"
                                           name="przedmioty"
                                           value="@przedmiot.PrzedmID"
                                           @(Html.Raw(przedmiot.Przypisano ? "checked=\"checked\"" : "")) />
                                           @przedmiot.PrzedmID @:  @przedmiot.Nazwa
                                @:</td>
                        }
                        @:</tr>
                    }
                    </table>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
