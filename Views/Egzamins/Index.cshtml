@model IEnumerable<Egzaminy.Models.Egzamin>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Wykładowca"))
    {
        <p>
            <h2>@Html.ActionLink("Utwórz", "Create")</h2>
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzasRozpoczecia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzasTrwania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Podgrupa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wykladowca)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CzasRozpoczecia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CzasTrwania)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sala)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Podgrupa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wykladowca)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
